LUAJIT="luajit"
task :test do
	FileList["[a-zA-Z]*.lua"].each do |f|
		puts "#############################################################"
		sh "#{LUAJIT} #{f}" do |ok,r|
			if not ok then
				p "!! #{LUAJIT} #{f} fails with #{r}"
				break
			end
		end
	end
	sh "#{LUAJIT} _term.lua"
end
task :term do
	sh "#{LUAJIT} _term.lua"
end
task :test_paas do
	sh "../../yue test/_master.lua &"
	sh "sleep 3"
	sh "../../yue test/_worker.lua &"
	sh "sleep 3"
	sh "killall yue"
end

task :default => [:test]
