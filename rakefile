# global setting
SRCDIR = 'src'
TESTDIR = 'test'
BINDIR = 'bin'


# it behaves like make -C
def rake_c(dir, task)
	a = Array.new
	dir.split('/').each do |token|
		token == '.' ? a.push(token) : a.push('..')
	end
	sh "cd #{dir}; #{task}; cd #{a.join('/')}"
end

# build related tasks
namespace :build do
	task :clean do
		rake_c(SRCDIR, "scons -c")
	end
	task :debug do
		rake_c(SRCDIR, "scons build=debug")
	end
	task :release do
		rake_c(SRCDIR, "scons build=release")
	end
end

# test related tasks
namespace :test do
	task :all => [:ll] do
	end
	task :ll do
		Dir.glob("*") do |file|
			if FileTest.directory?(file) then
				rake_c(TESTDIR + "/" + file, "rake")
			end
		end
	end
	task :leak do
		rake_c(BINDIR, "valgrind --leak-check=full --show-reachable=yes ./yue ../#{TESTDIR}/lua/_server.lua")
	end
end

# deploy related tasks
namespace :deploy do
end

# generic task
task :default => ["build:debug"]
task :clean => ["build:clean"]
